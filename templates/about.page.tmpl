{{template "base" .}}

{{define "content"}}
    <div class="container">
        <div class="row">
            <div class="col">
                <h1>I will never give up!</h1>
                <p>This is my ninja way</p>

                <p>This came from the template: {{index .StringMap "test"}}</p>

                <p>
                    {{if ne (index .StringMap "remote_ip") ""}}
                        Your remote IP address is {{index .StringMap "remote_ip"}}
                    {{else}}
                        I don't know your IP address yet. Please visit the <a href="/">Homepage</a>
                    {{end}}
                </p>
            </div>
        </div>
    </div>
{{end}}
